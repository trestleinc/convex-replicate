{
  "name": "@trestleinc/convex-replicate-core",
  "description": "Framework-agnostic replication utilities for ConvexReplicate.",
  "version": "0.2.1",
  "license": "Apache-2.0",
  "private": false,
  "repository": "github:trestleinc/convex-replicate",
  "homepage": "https://github.com/trestleinc/convex-replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/convex-replicate/issues"
  },
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "automerge",
    "offline-first",
    "tanstack"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./replication": {
      "types": "./dist/replication.d.ts",
      "default": "./dist/replication.js"
    },
    "./ssr": {
      "types": "./dist/ssr.d.ts",
      "default": "./dist/ssr.js"
    }
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tanstack/db": "0.4.13"
  },
  "peerDependencies": {
    "@automerge/automerge": "^3.1.2",
    "@automerge/automerge-repo-storage-indexeddb": "^2.4.0",
    "convex": "^1.28.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rslib/core": "0.17.0"
  }
}
