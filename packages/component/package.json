{
  "name": "@trestleinc/convex-replicate-component",
  "description": "CRDT replication component for Convex Replicate.",
  "repository": "github:trestleinc/convex-replicate",
  "homepage": "https://github.com/trestleinc/convex-replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/convex-replicate/issues"
  },
  "version": "0.1.0",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "automerge",
    "component"
  ],
  "type": "module",
  "scripts": {
    "build": "bun run build:esm && bun run build:cjs",
    "build:esm": "tsc --project ./esm.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc --project ./commonjs.json && echo '{\"type\":\"commonjs\"}' > dist/commonjs/package.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/esm/client/index.d.ts",
        "default": "./dist/esm/client/index.js"
      },
      "require": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/commonjs/client/index.d.ts",
        "default": "./dist/commonjs/client/index.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/esm/component/convex.config.d.ts",
        "default": "./dist/esm/component/convex.config.js"
      }
    }
  },
  "peerDependencies": {
    "convex": "^1.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^9.9.1",
    "convex-test": "^0.0.31",
    "@fast-check/vitest": "^0.1.3",
    "globals": "^15.9.0",
    "vitest": "^2.1.1",
    "prettier": "3.2.5",
    "typescript-eslint": "^8.4.0"
  },
  "main": "./dist/commonjs/client/index.js",
  "types": "./dist/commonjs/client/index.d.ts",
  "module": "./dist/esm/client/index.js",
  "publishConfig": {
    "access": "public"
  }
}
