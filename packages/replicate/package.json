{
  "name": "@trestleinc/replicate",
  "version": "0.3.0",
  "description": "Offline-first data replication with Yjs CRDTs and Convex",
  "repository": "github:trestleinc/convex-replicate",
  "homepage": "https://github.com/trestleinc/convex-replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/convex-replicate/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "yjs",
    "offline-first",
    "tanstack"
  ],
  "type": "module",
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/client/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./replication": {
      "import": {
        "types": "./dist/server/replication.d.ts",
        "default": "./dist/replication.js"
      }
    },
    "./ssr": {
      "import": {
        "types": "./dist/server/ssr.d.ts",
        "default": "./dist/ssr.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/component/convex.config.d.ts",
        "default": "./dist/component/convex.config.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "yjs": "^13.6.11",
    "@tanstack/offline-transactions": "^0.1.0",
    "@logtape/logtape": "^0.8.2"
  },
  "peerDependencies": {
    "convex": "^1.28.0",
    "@tanstack/db": "^0.4.17"
  },
  "devDependencies": {
    "@rslib/core": "0.17.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/client/index.d.ts",
  "module": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  }
}
