{
  "name": "@convex-rx/storage",
  "description": "CRDT storage component for ConvexRx.",
  "repository": "github:convex-rx/storage",
  "homepage": "https://github.com/convex-rx/storage#readme",
  "bugs": {
    "url": "https://github.com/convex-rx/storage/issues"
  },
  "version": "0.1.8",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "count",
    "component"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project ./esm.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc --project ./commonjs.json && echo '{\"type\":\"commonjs\"}' > dist/commonjs/package.json",
    "dev": "cd example; npm run dev",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "test": "vitest",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/esm/client/index.d.ts",
        "default": "./dist/esm/client/index.js"
      },
      "require": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/commonjs/client/index.d.ts",
        "default": "./dist/commonjs/client/index.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/esm/component/convex.config.d.ts",
        "default": "./dist/esm/component/convex.config.js"
      }
    }
  },
  "peerDependencies": {
    "convex": "~1.16.5 || >=1.17.0 <1.35.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^18.17.0",
    "eslint": "^9.9.1",
    "convex-test": "^0.0.31",
    "@fast-check/vitest": "^0.1.3",
    "globals": "^15.9.0",
    "vitest": "^2.1.1",
    "prettier": "3.2.5",
    "typescript": "~5.0.3",
    "typescript-eslint": "^8.4.0"
  },
  "main": "./dist/commonjs/client/index.js",
  "types": "./dist/commonjs/client/index.d.ts",
  "module": "./dist/esm/client/index.js"
}
