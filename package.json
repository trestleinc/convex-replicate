{
  "name": "@trestleinc/replicate",
  "version": "0.3.0",
  "description": "Offline-first data replication with Yjs CRDTs and Convex",
  "repository": "github:trestleinc/convex-replicate",
  "homepage": "https://github.com/trestleinc/convex-replicate#readme",
  "bugs": {
    "url": "https://github.com/trestleinc/convex-replicate/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "replicate",
    "crdt",
    "yjs",
    "offline-first",
    "tanstack"
  ],
  "type": "module",
  "private": false,
  "resolutions": {
    "convex": "1.28.2"
  },
  "overrides": {
    "convex": "1.28.2"
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev:example": "cd examples/tanstack-start && bun run dev",
    "build:example": "cd examples/tanstack-start && bun run build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "version-packages": "node scripts/version-packages.js",
    "publish:npm": "bun run build && bun run check:fix && bun publish",
    "prepublish": "bun run build && bun run check:fix"
  },
  "exports": {
    "./package.json": "./package.json",
    "./client": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./dist/client/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server.js"
      }
    },
    "./ssr": {
      "import": {
        "types": "./dist/server/ssr.d.ts",
        "default": "./dist/ssr.js"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./dist/component/convex.config.d.ts",
        "default": "./dist/component/convex.config.js"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "yjs": "13.6.27",
    "@tanstack/offline-transactions": "0.1.3",
    "@logtape/logtape": "1.1.2"
  },
  "peerDependencies": {
    "convex": "1.28.2",
    "@tanstack/db": "0.4.20"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@rslib/core": "0.17.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.1",
    "@tanstack/db": "0.4.20",
    "@types/node": "24.10.0",
    "convex": "1.28.2",
    "semantic-release": "25.0.1",
    "typescript": "5.9.3",
    "zod": "4.1.12"
  },
  "main": "./dist/index.js",
  "types": "./dist/client/index.d.ts",
  "module": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  }
}
